<h2>Create Your Product Information</h2>

<br>

<div class="row">
  <div class="col-md-12">
    <%= form_for([:admin, @product], :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label("Name") %>
        </div>
        <div class="controls col-md-10">
          <%= f.text_field :title, class: "form-control", placeholder: "How to call it..." %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label("Description") %>
        </div>
        <div class="controls col-md-10">
          <%= f.text_area :body, rows: 5, class: "form-control", placeholder: "Descript this products..." %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label("Quantity") %>
        </div>
        <div class="controls col-md-10">
          <%= f.text_field :quantity, class: "form-control", placeholder: "How many..." %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label("Price") %>
        </div>
        <div class="controls col-md-10">
          <%= f.text_field :price, class: "form-control", placeholder: "How much..." %>
        </div>
      </div>

      <% if @photo.image.present? %>
        <span>Product's Image</span> <br>
        <%= image_tag(@photo.image.thumb.url) %>
      <% end %>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label("Upload") %>
        </div>
        <div class="controls col-md-10">
          <%= f.simple_fields_for :photo do |c| %>
            <%= c.input :image , accept: 'image/jpeg,image/gif,image/png,image/jpg' %>
          <% end %>
        </div>
      </div>


      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: 'btn btn-primary btn-default', data: { disable_with: "Submitting..." } %>
          <%= link_to "< Home", root_path, class: 'btn btn-danger btn-default' %>
        </div>
      </div>

    <% end %>

  </div>
</div>
