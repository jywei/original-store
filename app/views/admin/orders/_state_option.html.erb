<div style="padding:10px; float:right;">

  <% case order.aasm_state %>
  <% when "order_placed" %>
    <%= link_to("Cancel Order",
                cancel_admin_order_path(order),
                class: "btn btn-danger btn-sm", method: :post) %>

  <% when "paid" %>
    <%= link_to("Cancel Order",
                cancel_admin_order_path(order),
                class: "btn btn-danger btn-sm", method: :post) %>
    <%= link_to("Deliver",
                ship_admin_order_path(order),
                class: "btn btn-success btn-sm", method: :post) %>

  <% when "shipping" %>
    <%= link_to("Delivered",
                shipped_admin_order_path(order),
                class: "btn btn-info btn-sm", method: :post) %>

  <% when "shipped" %>
    <%= link_to("Return",
                return_admin_order_path(order),
                class: "btn btn-warning btn-sm", method: :post) %>

  <% when "order_cancelled" %>
    <span class="label label-default">The order has been canceled</span>

  <% when "good_returned" %>
    <span class="label label-default">The order has been returned</span>

  <% end %>

</div>
