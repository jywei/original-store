<!DOCTYPE html>
<html>
<head>
  <title>Craving Backstage</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">

    <%= render "shared/navbar" %>
    <%= notice_message %>

    <div class="row">
      <div class="col-md-2">
        <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
          <li> <%= link_to("[ Backstage ]", admin_products_path,
                    class: "btn btn-sm btn-warning") %> </li>
        </ul>
      </div>

      <div class="col-md-10">
        <%= yield %>
      </div>

    </div>
  </div>
</body>
</html>
