<link rel="stylesheet" type="text/css" href="/assets/application.css" />

<div class="row">
  <div class="col-md-12">
    <p>Hello <%= @order_info.billing_name %>!</p>
    <br>
    <p>Do you find the stuff you were carving for? Hope you enjoy your quest this time, see you soon!</p>
    <br>
    <p>Cheers!</p>
    <p>Craving Gang</p>

    <br>

    <h2>
      Order Details <br>
      <small>
        <%= link_to("Order Link", order_url(@order.token)) %>
      </small>
    </h2>

    <br>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="70%">Product Information</th>
          <th>Price (USD) </th>
          <th>Quantity</th>
          <th>Cumulative Amount</th>
        </tr>
      </thead>
      <tbody>

        <% @order_items.each do |order_item| %>
          <tr>
            <td>
              <%= order_item.product_name %>
            </td>
            <td>
              <%= order_item.price %>
            </td>
            <td>
              <%= order_item.quantity %>
            </td>
            <td>
              <%= order_item.quantity * order_item.price %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div class="total group clearfix">
      <h3 class="pull-right">
        Total $ <%= @order.total %>
      </h3>
     </div>

     <hr>

     <h2> Delivery Information </h2>

     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td> Order Maker </td>
        </tr>
        <tr>
          <td>
            <%= @order_info.billing_name %> - <%= @order_info.billing_address %>
          </td>
        </tr>
        <tr>
          <td> Package Receiver </td>
        </tr>
        <tr>
          <td>
            <%= @order_info.shipping_name %> - <%= @order_info.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
